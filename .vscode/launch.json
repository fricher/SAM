    "version": "0.2.0",
    "configurations": [
        {
            "name": "remote gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/sam",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "miDebuggerArgs": "",
            "miDebuggerServerAddress": "10.0.0.1:4444",
            "logging": {
                "engineLogging": true
            },
            "externalConsole": true,
            "preLaunchTask": "Launch remote gdbserver"
        }
    ]
}